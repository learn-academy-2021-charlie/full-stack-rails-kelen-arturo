
<h2>Edit blog post</h2>

<%= form_with model: @blog, method: :patch, url: "/blogs/#{@blog.id}", local: true do |form| %>
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
    <br>
    <br>
    <%= form.label :content %>
    <br>
    <%= form.text_field :content %>
    <br>
    <br>
    <%= form.submit 'Update Blog' %>
<%end%>
<br>
<br>
<p class="link"><%= link_to 'Return to list', blogs_path %></p>
