<h2> Create a new blog post</h2>
<%= form_with model: @blog, local: true do |form| %>
<%= form.label :title %>
<br>
<%= form.text_field :title %>
<br>
<br>
<%= form.label :content %>
<br>
<%= form.text_field :content %>
<br>
<br>
<%= form.submit 'Add Blog' %>
<%end%>
<br>
<br>
<p class="link"><%= link_to 'Return to list', main_path %></p>
